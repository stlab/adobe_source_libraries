                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_BUILD_TYPE": "DEBUG",
                "CMAKE_CXX_CLANG_TIDY":
                    "clang-tidy;--fix;--allow-no-checks;--extra-arg=/EHsc;--extra-arg=/DNOMINMAX"
            }
        },
        {
            "name": "clang-tidy-nofix",
            "hidden": false,
            "generator": "Ninja",
